{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"]
    },

    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"]
}
